<div class="jumbotron">
  <h1 class="display-3">URL Shortener App</h1>
</div>

<div>
  <%= form_for Url.new, remote: true do |f| -%>
    <div class="col-lg-12">
      <div class="input-group">
        <%= f.text_field :original_url, class: 'form-control', placeholder: 'Type or paste here the URL' %>
        <span class="input-group-btn">
          <%= f.submit 'Get Your Link!', class: 'btn btn-primary', data: { disable_with: 'getting link...' } %>
        </span>
      </div>
      <small class="form-text text-muted">ex. http://google.com, http://www.google.com</small>
    </div>
  <% end -%>
</div>

<br>
<div class="alert alert-dismissible" role="alert">
  <samp id="link"></samp>
</div>